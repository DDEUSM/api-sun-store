{
  "compilerOptions": {
    "target": "ES6",                                 
    "lib": ["ES2021"],
    "module": "CommonJS",                                
    "rootDir": "./src",
    "outDir": "./dist",    
    "moduleResolution": "Node", 
    "allowJs": true,                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["./jest.config.js", "*.spec.js", "./dist"]
}
